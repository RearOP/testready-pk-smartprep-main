// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String?  @unique
  password  String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  student   Student?
  admin     Admin?

  @@map("users")
}

model Student {
  id                    String   @id @default(cuid())
  userId                String   @unique
  fullName              String
  schoolName            String?
  age                   Int?
  classGrade            String?
  whatsappNumber        String?  // Encrypted
  consentWhatsapp       Boolean  @default(false)
  profileCompleted      Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  user                  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  testAttempts         TestAttempt[]
  notifications        Notification[]

  @@map("students")
}

model Admin {
  id        String   @id @default(cuid())
  userId    String   @unique
  fullName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Test {
  id          String   @id @default(cuid())
  title       String
  description String?
  totalMarks  Int      @default(100)
  timeLimit   Int      @default(1800) // in seconds
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  questions   Question[]
  attempts    TestAttempt[]

  @@map("tests")
}

model Question {
  id            String   @id @default(cuid())
  testId        String
  text          String
  options       Json     // Array of {id: string, text: string}
  correctAnswer String
  marks         Int      @default(1)
  explanation   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  test          Test     @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@map("questions")
}

model TestAttempt {
  id            String        @id @default(cuid())
  studentId     String
  testId        String
  score         Int           @default(0)
  totalMarks   Int
  percentage    Float
  answers       Json          // Array of {questionId: string, answer: string}
  startedAt     DateTime      @default(now())
  finishedAt    DateTime?
  status        AttemptStatus @default(IN_PROGRESS)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  student       Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  test          Test          @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@map("test_attempts")
}

model Notification {
  id        String           @id @default(cuid())
  studentId String
  type      NotificationType
  message   String
  sentAt    DateTime?
  status    NotificationStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Relations
  student   Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model LoginLog {
  id        String   @id @default(cuid())
  userId    String
  ipAddress String?
  userAgent String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("login_logs")
}

enum UserRole {
  STUDENT
  ADMIN
}

enum AttemptStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

enum NotificationType {
  TEST_RESULT
  TEST_REMINDER
  SYSTEM_UPDATE
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}
